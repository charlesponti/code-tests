{
  "name": "candidate-exercise",
  "description": "Let's build an online bookshop",
  "version": "1.0.0",
  "author": "Vendigo Finance Group Limited",
  "babel": {
    "presets": [
      "react-app",
      "env"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "bugs": {
    "url": "https://github.com/vendigo-group/candidate-exercise/issues"
  },
  "contributors": [
    "Antony Jones <antony.jones@vendigo.com>",
    "Sid Wood <sid.wood@vendigo.com>"
  ],
  "dependencies": {
    "axios": "^0.21.2",
    "boom": "^4.2.0",
    "concurrently": "^3.5.0",
    "hapi": "^16.0.1",
    "history": "^4.6.3",
    "inert": "^4.0.3",
    "joi": "^10.0.5",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router-dom": "^4.1.2",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.0.2",
    "chai": "^3.5.0",
    "css-loader": "^0.28.4",
    "cssnano": "^3.10.0",
    "enzyme": "^2.9.1",
    "eslint": "^4.4.1",
